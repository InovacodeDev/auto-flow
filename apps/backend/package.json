{
    "name": "@autoflow/backend",
    "version": "1.0.0",
    "description": "AutoFlow Backend API",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:integration": "vitest --config vitest.config.ts",
        "test:all": "npm run test && npm run test:integration",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist",
        "db:generate": "drizzle-kit generate:pg",
        "db:migrate": "drizzle-kit push:pg",
        "db:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@fastify/cors": "^11.1.0",
        "@fastify/jwt": "^10.0.0",
        "@fastify/multipart": "^9.2.1",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/swagger": "^9.5.1",
        "@fastify/swagger-ui": "^5.2.3",
        "@types/cron": "^2.4.3",
        "axios": "^1.12.2",
        "bcrypt": "^6.0.0",
        "bull": "^4.16.5",
        "bullmq": "^5.58.7",
        "cron": "^4.3.3",
        "dotenv": "^17.2.2",
        "drizzle-orm": "^0.44.5",
        "fastify": "^5.6.1",
        "ioredis": "^5.7.0",
        "jsonwebtoken": "^9.0.2",
        "mercadopago": "^2.9.0",
        "openai": "^5.22.1",
        "pg": "^8.16.3",
        "postgres": "^3.4.7",
        "redis": "^5.8.2",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.5.2",
        "@types/pg": "^8.15.5",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@typescript-eslint/parser": "^8.44.1",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.36.0",
        "jest": "^30.1.3",
        "ts-jest": "^29.4.4",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}