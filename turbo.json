{
    "$schema": "https://turborepo.com/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "cacheDir": ".turbo/cache",
    "daemon": true,
    "envMode": "strict",
    "tasks": {
        "build": {
            "cache": true,
            "dependsOn": [
                "^build"
            ],
            "env": [
                ".env",
                ".env.local"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ],
            "outputLogs": "full"
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "clean": {
            "cache": false
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        }
    }
}