# AutoFlow Environment Configuration

# Database
DATABASE_URL=postgresql://autoflow:password@localhost:5432/autoflow

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=autoflow-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3000

# AI/OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=autoflow-webhook-token

# Email
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# File Storage
STORAGE_TYPE=local
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Logs
LOG_LEVEL=debug